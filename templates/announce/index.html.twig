{% extends 'base.html.twig' %}

{% block title %}Hello AnnounceController!{% endblock %}

{% block body %}


     <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <ol>
          <li><a href="index.html">Home</a></li>
          <li>Blog</li>
        </ol>
        <h2>Blog</h2>

      </div>
    </section><!-- End Breadcrumbs -->

   <section id="blog" class="blog">
      <div class="container">

        <div class="row">

        {% for announce in announces %}

          <div class="col-lg-4  col-md-6 d-flex align-items-stretch" data-aos="fade-up">
            <article class="entry">

              <div class="entry-img">
                <img src="{{announce.coverImage}}" alt="" class="img-fluid">
              </div>

              <h2 class="entry-title">
                <a href="blog-single.html">{{announce.title}}</a>
              </h2>

              <div class="entry-meta">
                <ul>
                  <li class="d-flex align-items-center"><i class="icofont-user"></i> <a href="blog-single.html">John Doe</a></li>
                  <li class="d-flex align-items-center"><i class="icofont-wall-clock"></i> <a href="blog-single.html"><time datetime="2020-01-01">{{announce.createdAt|date("d/m/y")}}</time></a></li>
                </ul>
              </div>

              <div class="entry-content">
                <p>
                  {{announce.description|slice(0, 50)}}...
                </p>

                <div class="row">
                    <div class="read-more">
                      <a href="{{ path('announce_show', {"id": announce.id}) }}">Show</a>
                    </div>
                    <div class="read-more">
                      <a href="{{ path('announce_edit', {"id": announce.id}) }}">Editer</a>
                    </div>
                     <div class="read-more">
                      <a href="{{ path('announce_delete', {"id": announce.id}) }}" onclick="return confirm('Voulez vous vraiment supprimer l\'annonce')">Delete</a>
                    </div>
                </div>

              </div>

            </article><!-- End blog entry -->
          </div>

             {% endfor %}   
        </div>

        <div class="blog-pagination" data-aos="fade-up">
          <ul class="justify-content-center">
            <li class="disabled"><i class="icofont-rounded-left"></i></li>
            <li><a href="#">1</a></li>
            <li class="active"><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#"><i class="icofont-rounded-right"></i></a></li>
          </ul>
        </div>

      </div>
    </section><!-- End Blog Section -->

       


        
  
{% endblock %}
